{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
  ]
}